#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window

FloatLayout:
    canvas:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            source: 'data/images/background.jpg'
            size: self.size

    BoxLayout:
        padding: 10
        spacing: 10
        size_hint: 1, 1
        pos_hint: {'bottom': 1}
        height: 24
        Label:
            height: 24
            text_size: self.size
            color: (1, 1, 1, .8)
            text: 'BallWorld - Community Core Fusion 0.1a'

<Ball>:
    size: self.size
    size_hint: 0,0
    pos: (self.x, self.y)
    canvas:
        Color:
            rgb: self.color
        Ellipse:
            size: self.size
            pos: self.pos